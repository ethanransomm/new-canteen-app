<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="new_canteen_app.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="City Of Bristol College Canteen" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                </Frame> 
                
                <Entry x:Name="username" Placeholder="Username" VerticalTextAlignment="Center" />
            <Entry x:Name="password" Placeholder="Password" VerticalTextAlignment="Center"
                   IsPassword="True"/>
            <Button  Text="Login" Clicked="button_clicked" />
           


        </StackLayout>
    </ContentPage.Content>
</ContentPage>