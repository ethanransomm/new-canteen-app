<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="new_canteen_app.OrderPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Receipt" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
            </Frame>

            <Label x:Name="OrderNumber" HorizontalOptions="Center" />

            <Frame BackgroundColor="#a39b96" Padding="24" CornerRadius="0">
                <Label Text="Summary" HeightRequest="50" FontSize="30" HorizontalOptions="Center" BackgroundColor="#a39b96" 
                    />
            </Frame>
            <Frame BackgroundColor="#a39b96" Padding="24" CornerRadius="0" Margin="-20, -40,0,0">
                <Label x:Name="OrderCount" FontSize="25"  HorizontalOptions="Center" BackgroundColor="#a39b96"/>
            </Frame>
            

                
                
                      
        </StackLayout>
    </ContentPage.Content>
</ContentPage>